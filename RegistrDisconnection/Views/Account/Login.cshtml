@model RegistrDisconnection.Models.Users.LoginModel




<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form class="form-horizontal" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <span class="heading">АВТОРИЗАЦІЯ</span>
                <div class="validation" asp-validation-summary="ModelOnly" />
                <div class="form-group">
                    <i class="fa fa-user"></i>
                    <input type="text" class="form-control" asp-for="Login" />
                    <span asp-validation-for="Login" />
                </div>

                <div class="form-group">
                    <i class="fa fa-lock"></i>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Увійти" class="btn btn-outline-dark" />
                    @if (ViewBag.Error != null)
                    {
                        @if (ViewBag.Error == "BedLogin")
                        {
                            <script>
                                setTimeout(() => alert("Не вірний логін і(або) пароль!"), 500);
                            </script>
                        }
                    }

                </div>
            </form>
        </div>
    </div><!-- /.row -->
</div><!-- /.container -->