@model RegistrDisconnection.Models.Users.User

@{
    ViewData["Title"] = "Видалення користувача";
}

<h1>Видалити користувача</h1>

<div>
    <h4>@Html.DisplayFor(model => model.FullName)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ПІП
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            Логін
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class = "col-sm-2">
            Пароль
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            Організація
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cok.Name)
        </dd class>
        <dt class = "col-sm-2">
            Права
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prava.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Повернутись до списку користувачів</a>
    </form>
</div>
