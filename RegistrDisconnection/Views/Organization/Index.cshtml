@model IEnumerable<RegistrDisconnection.Models.Dictionaries.Organization>

@{
    ViewData["Title"] = "Список організацій";
}

<h1>Список організацій</h1>

<p>
    <a asp-action="Create">Добавити нову</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Код організації
            </th>
            <th>
                Нзава організації
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детально</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
