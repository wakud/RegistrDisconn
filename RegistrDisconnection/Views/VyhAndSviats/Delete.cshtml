@model RegistrDisconnection.Models.Dictionaries.VyhAndSviat

@{
    ViewData["Title"] = "Видалення дати";
}

<h3>Видалити цей день ?</h3>
<div>
    <h4>
        @Html.DisplayFor(model => model.Name) - 
        @Html.DisplayFor(model => model.Day).
        @Html.DisplayFor(model => model.Month).
        @Html.DisplayFor(model => model.Year)
    </h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Рік
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            Місяць
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Month)
        </dd>
        <dt class = "col-sm-2">
            День
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class = "col-sm-2">
            Назва
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
